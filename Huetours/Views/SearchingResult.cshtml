@inherits Umbraco.Web.Mvc.UmbracoViewPage<SearchContentModel>
@using Huetours.Models;
@using Huetours.ViewModels;

@{
    Layout = "master.cshtml";
    var search = (SearchingResult)Umbraco.Content(1168);
}

<section id="search" style="background-color: #f5f5f5">
    <img style="width:100%" src="@search.BannerImage.LocalCrops" alt=" " />
        <div class="box_content" style=" position: absolute; top: 30%; left: 24%; z-index: 1">
        @Html.Raw(search.Content)
        </div>
        <div class="container">
            @*<form action="/search/">
                    <input type="text" name="Query" placeholder="Search........." />
                    <button>Search</button>
                </form>*@
            <article style="padding-top: 50px;">
                @Html.Partial("Partials/SearchingForm", Model.SearchingViewModel)

                <p style="font-size: 20px;">Các kết quả tìm kiếm cho <strong>@Model.SearchingViewModel.Query</strong> là:</p>
                @if (Model.SearchResults != null && Model.SearchResults.Any())
                {
                    foreach (var item in Model.SearchResults)
                    {
                        <p style="font-size: 18px"><a style="color:darkviolet; font-weight:500" href="@item.Url()">@item.Name</a></p>
                    }
                }
            </article>
        </div>

</section>