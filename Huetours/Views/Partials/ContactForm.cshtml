@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web.UI

<div>
    @using (Html.BeginUmbracoForm("HandleSubmitForm", "ContactSurface", FormMethod.Post))
    {
        <div id="contact-form-sent" class='contact-form-sent'>
            <input class="input" name='fullName' id="fullName" placeholder='@Umbraco.GetDictionaryValue("Full Name")' type='text' data-form-max="@Umbraco.GetDictionaryValue("Message characters")" data-form-error="@Umbraco.GetDictionaryValue("Message error")" data-form-missing="@Umbraco.GetDictionaryValue("Message FullName")">
            <p class="error-msg" data-error-for="fullName"></p>
            <input class="input" name='email' id="email" placeholder='@Umbraco.GetDictionaryValue("Email")' type='email' data-form-error="@Umbraco.GetDictionaryValue("Emailerror")" data-form-missing="@Umbraco.GetDictionaryValue("Massege email")" data-form-max="@Umbraco.GetDictionaryValue("EmailCharater")">
            <p class="error-msg" data-error-for="email"></p>
            <input class="input" name='phone' id="phone" placeholder='@Umbraco.GetDictionaryValue("Phone")' type='text' data-form-min-max="@Umbraco.GetDictionaryValue("Phonecharater")" data-form-error="@Umbraco.GetDictionaryValue("phoneeror")" data-form-missing="@Umbraco.GetDictionaryValue("Messagephone")">
            <p class="error-msg" data-error-for="phone"></p>
            <textarea class="input" name="message" id="message" placeholder="@Umbraco.GetDictionaryValue("Message")" type='text' data-form-missing="@Umbraco.GetDictionaryValue("Mensegercharacter")" data-form-max="@Umbraco.GetDictionaryValue("Mensengereror")"></textarea>
            <p class="error-msg" data-error-for="message"></p>
            <div class='row agree'>
                @if (TempData["ContactUsSuccess"] != null && (bool)TempData["ContactUsSuccess"])
                {
                    <div class="col-12 col-md-8 col-lg-8">
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @Umbraco.GetDictionaryValue("Successed")
                        </div>
                    </div>
                    <div class="col-12 col-md-4 col-lg-4">
                        <button class='animated' type='submit' value=''>
                            <i class="far fa-paper-plane"></i>
                            @Umbraco.GetDictionaryValue("Send Message")
                        </button>
                    </div>
                }
                else
                {
                    <div class="col-12 submit-button" style="flex:none; max-width: 90%; text-align:center">
                        <button class='animated' type='submit' value='' disabled>
                            <i class="far fa-paper-plane"></i>
                            @Umbraco.GetDictionaryValue("Send Message")
                        </button>
                    </div>}
            </div>

        </div>}

</div>